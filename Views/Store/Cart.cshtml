@model IEnumerable<RentalRides.Models.Cart>

@{
    ViewData["Title"] = "Your Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
    double total = 0;
}

<h1>Your Cart</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Car)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            total += (item.Quantity * item.Price);
            <tr>
                <td>
                    <a asp-controller="Cars" asp-action="Details" asp-route-id="@item.CarId">@item.Car.Name</a>
                    @*@Html.DisplayFor(modelItem => item.Car.Description)*@
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td class="text-right">
                    @String.Format("{0:c}", item.Price)
                </td>
                <td>
                    <a asp-action="RemoveFromCart" asp-route-id="@item.CartId">Delete</a>
                </td>
            </tr>
        }

        <tr>
            <td colspan="4" class="text-right">
                @String.Format("{0:c}", total)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Index">Keep Shopping</a>
                <a class="btn btn-primary" asp-action="Checkout">Check Out</a>
            </td>
        </tr>
    </tbody>
</table>

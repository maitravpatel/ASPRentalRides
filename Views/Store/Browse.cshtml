@model IEnumerable<RentalRides.Models.Car>

<h1>Feel free to browse our rides</h1>

@if (ViewBag.Segment != null)
{
    <h2> @ViewBag.segment</h2>
}

<section>
    <div class="row">

        @foreach (var c in Model)
        {
            <div class="col-sm-6 col-lg-4 mb-3">
                <div class="card mb-3 text-center h-100">
                    <div class="card-body">
                        <h5>
                            <a asp-controller="Cars" asp-action="Details" asp-route-id="@c.CarId">@c.Name</a>
                        </h5>
                        <img src="~/img/CarsUploads/@c.Photo" alt="Car Photo" class="img-thumbnail" />
                        <h6>
                            @String.Format("{0:c}", c.Price)
                        </h6>
                        <p>
                            @c.Description
                        </p>

                        <!--Form-->
                        <form method="post" action="/Store/AddToCart">
                            <!--Hidden field for the selected ride id-->
                            <input type="hidden" id="CarId" name="CarId" value="@c.CarId" />
                            <div class="form-group">

                                <label class="control-label" for="Quantity">Quantity: </label>
                                <input name="Quantity" id="Quantity" required min="1" max="9" type="number" class="input-small" />
                            </div>
                            <button class="btn btn-primary">Add To Cart</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
@model IEnumerable<RentalRides.Models.Segment>

@{
    ViewData["Title"] = "Browse Through the rides!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Choose a Ride Segment</h1>

<section>
    <div class="row">

        @foreach(var item in Model)
        {
            <div class="col-sm-6 col-lg-4 mb-3">
                <div class="card mb-3 text-center h-100">
                    <div class="card-body">
                        <a asp-controller="Store" asp-action="Browse" asp-route-category="@item.SegmentId">@item.Name</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
